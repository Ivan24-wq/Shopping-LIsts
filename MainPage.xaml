<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Frame BackgroundColor="#FF09E6"
                   CornerRadius="16"
                   Padding="20"
                   Margin="10, 0"
                   HasShadow="False"
                   HorizontalOptions="Fill"
                   VerticalOptions="CenterAndExpand"
                   HeightRequest="75">

                <Grid>
                    <Label Text="Список покупок"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black"/>

                    <Image
                        Source="settings.jpg"
                        BackgroundColor="#FF09E6"
                        WidthRequest="24"
                        HeightRequest="24"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        Margin="0, 10, 0, 10">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettingClicked"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>

            </Frame>

            <SearchBar
                x:Name="search"
                Placeholder="Ввод"
                Margin="10, 10"
                HorizontalOptions="Fill"
                BackgroundColor="White"
                TextColor="Black">
            </SearchBar>

            <Grid HorizontalOptions="Start" Margin="10, 5">
                <Button
                    Text="Добавить"
                    FontSize="24"
                    Background="Black"
                    FontAttributes="Italic"
                    TextColor="White"
                    WidthRequest="200"
                    CornerRadius="20"
                    Padding="10, 0"
                    Clicked="OnCliccked"/>
                <Image
                    Source="check.png"
                    HeightRequest="30"
                    WidthRequest="30"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Margin="15, 0, 0, 0">
                </Image>
            </Grid>

            <Image
                Source="{AppThemeBinding Light='teash_light.png', Dark='teash_dark.png'}"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGoToTrash"/>
                </Image.GestureRecognizers>
            </Image>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>